<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.spring.core.entities.User" name="user" init-method="init" destroy-method="destory">
      <property name="id" value="123"/>
      <property name="name" value="Pritam Ray"/>
      <property name="salary" value="20000"/>
      <property name="city" value="Ropar"/>
    </bean>
    
    <bean class="com.spring.core.entities.MyPostBeanProcessor1"></bean>
     <bean class="com.spring.core.entities.MyPostBeanProcessor2"></bean>
    
</beans>
